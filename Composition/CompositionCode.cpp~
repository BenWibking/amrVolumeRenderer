#include "CompositionCode.h"

double composition(int* resolution, int* s_red, int* s_green, int* s_blue, int* c_red, int* c_green, int* c_blue,int* c_depth) {
	clock_t begin = clock();
	clock_t end = clock();
     double init_spent = (double)(end - begin) / CLOCKS_PER_SEC;
     
     for (int i = 0; i < resolution[0]; i++) {
     	for (int j = 0; j < resolution[1] * resolution[2]; j++) {
     		int index = i * resolution[1] * resolution[2] + j;
     		if (i < c_depth[j] && s_red[index] >= 0 && s_green[index] >= 0 && s_blue[index] >= 0) {
     			c_depth[j] = i;
				c_red[j] = s_red[index];
				c_green[j] = s_green[index];
				c_blue[j] = s_blue[index];
			}
     	}
     }
     
     //TODO: Change the view point
     
	return init_spent;
}
